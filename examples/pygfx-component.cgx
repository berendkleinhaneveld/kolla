<group>
	<ambient-light />
	<directional-light />
	<mesh
	  :material="red"
	  :geometry="sphere"
	/>
</group>

<script>
import pygfx as gfx
import collagraph


sphere = gfx.sphere_geometry(radius=3)
red = gfx.MeshPhongMaterial(color=(1, 0.2, 0.2))


class Ball(collagraph.Component):
	pass
</script>
